# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index
GET     /register                   controllers.Application.displayRegisterPage
GET     /:sessionId/registered      controllers.Application.registered(sessionId: fr.xebia.xke.akka.infrastructure.SessionId)
GET     /:sessionId/events          controllers.Application.events(sessionId: fr.xebia.xke.akka.infrastructure.SessionId)
GET     /:sessionId/0               controllers.Application.level0(sessionId: fr.xebia.xke.akka.infrastructure.SessionId)
GET     /:sessionId/1               controllers.Application.level1(sessionId: fr.xebia.xke.akka.infrastructure.SessionId)
GET     /:sessionId/2               controllers.Application.level2(sessionId: fr.xebia.xke.akka.infrastructure.SessionId)
GET     /:sessionId/3               controllers.Application.level3(sessionId: fr.xebia.xke.akka.infrastructure.SessionId)
GET     /:sessionId/4               controllers.Application.level4(sessionId: fr.xebia.xke.akka.infrastructure.SessionId)
GET     /:sessionId/5               controllers.Application.level5(sessionId: fr.xebia.xke.akka.infrastructure.SessionId)
GET     /:sessionId/6               controllers.Application.level6(sessionId: fr.xebia.xke.akka.infrastructure.SessionId)
GET     /:sessionId/multiplayer     controllers.Application.multiplayerWithUser(sessionId: fr.xebia.xke.akka.infrastructure.SessionId)
GET     /multiplayer                controllers.Application.multiplayerWithoutUser

GET     /scores                     controllers.Application.scores

POST    /user                       controllers.Application.register

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

GET     /globe/*file                controllers.Assets.at(path="/public/globe", file)